{
	"version": 9,
	"configurations": [
		{
			"node": "system.lang.default",
			"type": "language",
			"default": "<<SYSTEM_LANG>>"
		},
		{
			"node": "system.lang.debug",
			"type": "boolean",
			"default": false
		},
		{
			"node": "system.proxy.enable",
			"type": "boolean",
			"default": false
		},
		{
			"node": "system.proxy.host",
			"type": "string",
			"default": "127.0.0.1"
		},
		{
			"node": "system.proxy.port",
			"type": "int",
			"required": [0, 65535],
			"default": 80
		},
		{
			"node": "system.proxy.bypass",
			"type": "string-list",
			"default": [
				"127.0.0.1",
				"192.168.*"
			]
		},
		{
			"node": "system.log.color.theme",
			"type": "string",
			"default": "light",
			"required": [
				"^light$",
				"^dark$",
				"^custom$",
				"^off$"
			]
		},
		{
			"node": "system.log.color.TRACE",
			"type": "string",
			"default": "white",
			"required": [
				"^(bright )?(black|red|green|yellow|blue|magenta|cyan|white)$"
			]
		},
		{
			"node": "system.log.color.DEBUG",
			"type": "string",
			"default": "cyan",
			"required": [
				"^(bright )?(black|red|green|yellow|blue|magenta|cyan|white)$"
			]
		},
		{
			"node": "system.log.color.INFO",
			"type": "string",
			"default": "bright green",
			"required": [
				"^(bright )?(black|red|green|yellow|blue|magenta|cyan|white)$"
			]
		},
		{
			"node": "system.log.color.WARN",
			"type": "string",
			"default": "bright magenta",
			"required": [
				"^(bright )?(black|red|green|yellow|blue|magenta|cyan|white)$"
			]
		},
		{
			"node": "system.log.color.ERROR",
			"type": "string",
			"default": "red",
			"required": [
				"^(bright )?(black|red|green|yellow|blue|magenta|cyan|white)$"
			]
		},
		{
			"node": "system.log.color.FATAL",
			"type": "string",
			"default": "bright red",
			"required": [
				"^(bright )?(black|red|green|yellow|blue|magenta|cyan|white)$"
			]
		}
	]
}
